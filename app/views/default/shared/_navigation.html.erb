<% presenter = Spina::MenuPresenter.new(Spina::Page.all) %>
<nav class="bg-gray-800">
  <div class="container mx-auto px-6 py-4">
    <h1 class="text-white text-lg">MySpina App</h1>
    <%= presenter.to_html do |menu_item, children, classes, active| %>
      <a href="<%= menu_item.url %>" class="<%= 'text-green-500' if active %> text-gray-200 hover:text-green-500 <%= classes %>">
        <%= menu_item.title %>
      </a>
      <% unless children.blank? %>
        <div class="mt-1">
          <%= children %>
        </div>
      <% end %>
    <% end %>
  </div>
</nav>
